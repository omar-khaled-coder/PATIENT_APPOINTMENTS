<h2 style="text-align: center;margin-top: 20px;">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'custom-form' , style: 'display: grid; justify-content: center;'}) do |f| %>
  <div class="form-inputs" style="width: 400px;margin-top: 20px;">
    <div class="form-group">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
  </div>

<div class="form-actions" style="display: contents; text-align: center;">
  <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
  <%= render "devise/shared/links" %>
</div>

<% end %>
